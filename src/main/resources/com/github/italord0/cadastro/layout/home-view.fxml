<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minWidth="-Infinity" prefHeight="650.0" prefWidth="850.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.italord0.cadastro.controller.HomeController">
    <TableView fx:id="usersTableView" prefHeight="584.0" prefWidth="685.0" tableMenuButtonVisible="true">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="Id" />
            <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
            <TableColumn fx:id="emailColumn" minWidth="100.0" prefWidth="150.0" text="E-Mail" />
            <TableColumn fx:id="dateOfBirthColumn" prefWidth="100.0" text="Date of Birth" />
            <TableColumn fx:id="balanceColumn" prefWidth="100.0" text="Balance" />
        </columns>
    </TableView>
    <HBox alignment="BOTTOM_LEFT" minWidth="-Infinity" prefWidth="685.0">
        <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT">
            <TextField promptText="Nome" fx:id="txtName">
            <HBox.margin>
               <Insets right="32.0" />
            </HBox.margin></TextField>
            <TextField promptText="Email" fx:id="txtEmail">
            <HBox.margin>
               <Insets right="32.0" />
            </HBox.margin></TextField>
            <TextField promptText="Nascimento" fx:id="txtDateOfBirth">
            <HBox.margin>
               <Insets right="32.0" />
            </HBox.margin></TextField>
         <TextField promptText="Conta" fx:id="txtBalance"/>
        </HBox>
        <HBox alignment="CENTER_RIGHT" minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" prefHeight="26.0" prefWidth="181.0">
            <Button mnemonicParsing="false" text="Salvar" fx:id="btnSave">
            <HBox.margin>
               <Insets right="32.0" />
            </HBox.margin></Button>
            <Button mnemonicParsing="false" text="Excluir" fx:id="btnDelete">
            <HBox.margin>
               <Insets />
            </HBox.margin></Button>
         <padding>
            <Insets left="32.0" />
         </padding>
        </HBox>
    </HBox>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
